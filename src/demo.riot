    <div class="item">
      <h2>(Active) Filters</h2>

      <div class="mx-auto" style="width: 180px">
        <dfk-widget
          is="active-filters"
          criteria={{tag: 'animal|historic', category: 'subject'}}
          params={['tag', 'category']}
          translate-keys={false}
          class="mb-5"
        />

        <dfk-widget
          is="facet"
          tag_line={'some tag line'}
          name="People facet"
          text="some text"
          criteria={{people: 'Douglas Adams'}}
          aggregation={state.aggregation}
          class="d-block mb-6"
        />
      </div>
    </div>
  </div>

  <script>
    import ActiveFilters from './components/active_filters.riot'
    import AuthorityLink from './components/authority_link.riot'
    import Blockquote from './components/blockquote.riot'
    import Facet from './components/facet.riot'
    import FlyIn from './components/fly_in.riot'
    import Icon from './components/icon.riot'
    import Input from './components/input.riot'
    import Loading from './components/loading.riot'
    import Pagination from './components/pagination.riot'
    import Popup from './components/popup.riot'
    import RangeControl from './components/range_control.riot'
    import Tab from './components/tab.riot'

    export default class {
      static components = {
        ActiveFilters,
        AuthorityLink,
        Blockquote,
        Facet,
        FlyIn,
        Icon,
        Loading,
        Pagination,
        Popup,
        RangeControl,
        Tab,
        'dfk-input': Input,
      }

      onBeforeMount(props, state) {
        this.state = {
          // zambia: false,
          paris: false,
          bins: this.randomBins(40),
          bins2: this.randomBins(80),
          popup: false,
          tab: 'cities',
          page: 8,
          aggregation: {
            buckets: [
              {key: 'Renaud Divo', doc_count: 43},
              {key: 'Jean-Bâptiste', doc_count: 10},
              {key: 'Jane Doe', doc_count: 2}
            ]
          }
        }

        this.parisClick = this.parisClick.bind(this)
        this.popup = this.popup.bind(this)

        this.root.innerHTML = ''
      }

      onMounted() {
        window.setTimeout(() => {
          for (const c of this.tags['range-control']) {
            c.update()
          }
        }, 0)
      }

      parisClick() {
        this.update({paris: !this.state.paris})
      }

      randomBins(count) {
        return Array.from(Array(count).keys()).map(e => Math.round(Math.random() * 100))
      }

      newBins(attr, count) {
        this.update({[attr]: this.randomBins(count)})
      }

      popup(event) {
        this.update({popup: !this.state.popup})
      }

      changeTab(id) {
        this.update({tab: id})
      }

      pageTo(params) {
        this.update({page: params['page']})
      }
    }
  </script>
</demo>
