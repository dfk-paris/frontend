    <div class="item icons">
      <h2>Icon</h2>

      <div class="mx-auto" style="width: 500px">
        <div class="icon-tile">
          <dfk-widget is="icon" type="book" />
          <div>book</div>
        </div>
        <div class="icon-tile">
          <dfk-widget is="icon" type="quotes" />
          <div>quotes</div>
