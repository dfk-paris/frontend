<tab class={classes()}>
  <a
    onclick={event => this.activate(event)}
    class="dfk-sans-serif text-decoration-none p-2"
  >
    <slot />
  </a>

  <script>
    export default class {
      activate(event) {
        event.preventDefault()
        if (this.props.activate) {
          const newValue = (this.isActive() ? null : this.props.id)
          this.props.activate(newValue)
        }
      }

      isActive() {
        return this.props.activeTab == this.props.id
      }

      classes() {
        return this.isActive() ? 'active' : ''
      }
    }
  </script>
</tab>
